<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adminlog"
    android:background="#7BD8AB">

    <androidx.cardview.widget.CardView
        android:layout_width="247dp"
        android:layout_height="207dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#7BD8AB"
        app:cardCornerRadius="80dp"
        tools:layout_editor_absoluteX="82dp"
        tools:layout_editor_absoluteY="87dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:background="@drawable/admin" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ADMIN"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="315dp"
        android:layout_height="81dp"
        app:srcCompat="@drawable/rectangle1"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="338dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="315dp"
        android:layout_height="81dp"
        app:srcCompat="@drawable/rectangle1"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="442dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UserName"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="367dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="467dp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="47dp"
        android:layout_height="43dp"
        android:layout_gravity="center"
        android:background="@drawable/admin"
        tools:layout_editor_absoluteX="88dp"
        tools:layout_editor_absoluteY="355dp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="48dp"
        android:layout_height="44dp"
        app:srcCompat="@drawable/baseline_lock_black_24"
        tools:layout_editor_absoluteX="88dp"
        tools:layout_editor_absoluteY="455dp" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="72dp"
        android:layout_height="68dp"
        app:srcCompat="@drawable/baseline_navigate_before_black_18"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="30dp" />


    <Button
        android:id="@+id/button3"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/white"
        android:text="SIGN IN"
        android:textColor="#7BD8AB"
        android:textSize="17sp"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="542dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:textStyle="bold"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="592dp" />
</androidx.constraintlayout.widget.ConstraintLayout>